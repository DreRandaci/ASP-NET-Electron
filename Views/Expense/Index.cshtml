@model number_cruncher.Models.ExpenseViewModels.ExpensesViewModel
@{
    ViewData["Title"] = "Expense Page";
}

<h2>Expenses</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Expense</th>
            <th>Category</th>
            <th>Date Added</th>
            <th>Total</th>
            <th>Create</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Expenses.Count > 0)
        {
            foreach (var item in Model.Expenses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseCategory.ExpenseType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                        @if (item.ExpenseCategory.ExpenseType != "Mileage") {
                            <td>$@Html.DisplayFor(modelItem => item.Total)</td>
                        } else {
                            <td>@Html.DisplayFor(modelItem => item.Total) miles</td>
                        }
                    <td>
                        <a asp-action="Create" asp-route-id="@item.ExpenseCategory">New Record</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ExpenseId">View Records</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Expenses Total</th>
            <td></td>
            <td></td>
            <td>$@Html.DisplayFor(modelItem => modelItem.ExpensesTotal)</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <th>Mileage Total</th>
            <td></td>
            <td></td>
            <td>@Html.DisplayFor(modelItem => modelItem.MileageTotal) miles</td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>
</table>
<div class="btn-toolbar">
    <form asp-action="Create" asp-controller="Expense">
        <input class="btn btn-success" type="submit" value="Create new expense" />
    </form>
</div>